@model List<iTCShop.Models.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Order Management</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Ship Address</th>
            <th>Total Pay</th>
            <th>Status</th>
            <th>CustomerId</th>
            <th>Pay Method</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ID</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.ShipAddress</td>
                <td>@order.TotalPay.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.CustomerId</td>
                <td>@order.PayMethod</td>
                <td>
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#details-@order.ID" aria-expanded="false" aria-controls="details-@order.ID">
                        Show Details
                    </button>
                </td>
            </tr>
            <tr class="collapse" id="details-@order.ID">
                <td colspan="7">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <tr>
                                    <td>@detail.ProductID</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.Price.ToString("C")</td>
                                    <td>@detail.TotalAmount.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>