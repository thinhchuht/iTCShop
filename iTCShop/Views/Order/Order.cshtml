@model Order

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="text-center">Order Form</h2>
        <form>
            <div class="form-group">
                <label for="orderDate">OrderDate</label>
                <input type="date" class="form-control" id="orderDate" name="orderDate" value="@Model.OrderDate" readonly>
            </div>
            <div class="form-group">
                <label for="shipAddress">Shipping Address</label>
                <textarea class="form-control" id="shipAddress" name="shipAddress" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="totalPay">Total Pay</label>
                <input type="number" step="0.01" class="form-control" id="totalPay" value="@Model.TotalPay" name="totalPay" readonly>
            </div>
            <div class="form-group">
                <label for="payMethod">Payment Method</label>
                <input type="text" class="form-control" id="payMethod" name="payMethod">
            </div>
            <button type="submit" class="btn btn-primary">Submit Order</button>
        </form>
    </div>
</div>