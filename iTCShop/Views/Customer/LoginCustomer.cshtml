@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Hãy đăng nhập để sử dụng đầy đủ tính năng của Website</h2>
<br />

<h3 class="text-danger">@ViewBag.Fail</h3>

<form method="post" action="/Customer/LoginCustomer">

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="userMail" class="control-label col-md-2">Email:</label>
            <div class="col-md-10">
                <input type="text" id="userMail" name="email" class="form-control" />
                <!-- Validation message can be added here if needed -->
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-md-2">Mật khẩu:</label>
            <div class="col-md-10">
                <input type="password" id="password" name="password" class="form-control" />
                <!-- Validation message can be added here if needed -->
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>