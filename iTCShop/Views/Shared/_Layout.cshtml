@using iTCShop.Extensions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var user = SessionValueConverter.GetObjectFromJson<Customer>(HttpContextAccessor.HttpContext.Session, "user");

    if (user == null)
    {
        ViewBag.Log = "Login";
    }
    else ViewBag.Log = "LogOut";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/Site.css" />
</head>
<body>
    <header class="header" id="header">
        iTCShop Xin chào
            <p style="font-weight: bold; font-size: larger; color: red">@user?.Name </p>
            <button id="log" style="border:none">
                <i class="fa-solid fa-right-to-bracket" style="color: #000000;"></i>
                &nbsp;@ViewBag.Log
            </button>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="FootNavBar">
            <div>
                <a href="/">
                    <i class="fa-solid fa-house"></i>
                    <p>Trang chủ</p>
                </a>
            </div>
            <div>
                <a href="/Admin/HomeAdmin">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <p>Giỏ hàng<span id="cartHome"></span></p>
                </a>

            </div>
            <div>
                <a href="/Customer/RegisterCustomer">
                    <i class="fa-brands fa-facebook-messenger"></i>
                    <p>Đăng ký</p>
                </a>

            </div>
            <div>
                <a href="/Login/Login">
                    <i class="fa-solid fa-user"></i>
                    <p>Tài khoản</p>
                </a>

            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>