@model List<ProductType>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Product Type";
}

<style>
    .custom-table {
        border: 2px solid #007bff;
    }

        .custom-table th {
            background-color: #007bff;
            color: white;
        }

        .custom-table td {
            border: 1px solid #007bff;
        }

    .custom-row:hover {
        background-color: #f8f9fa;
    }

    .action-buttons button {
        margin-right: 5px;
    }
</style>

<div class="container mt-5">
    <h2>Product Types</h2>

    <!-- Search Form -->
    <form class="form-inline mb-3">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchInput">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button" onclick="searchProduct()">Search</button>
    </form>

    <!-- Add Button -->
    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#addProductModal">Add New Product Type</button>

    <table class="table custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Size</th>
                <th>Battery</th>
                <th>Memory</th>
                <th>Color</th>
                <th>RAM</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productType in Model)
            {
                <tr class="custom-row">
                    <td>@productType.ID</td>
                    <td>@productType.Name</td>
                    <td>@productType.Price.ToString("C")</td>
                    <td>@productType.Description</td>
                    <td>@productType.Size</td>
                    <td>@productType.Battery</td>
                    <td>@productType.Memory</td>
                    <td>@productType.Color</td>
                    <td>@productType.RAM</td>
                    <td><img src="@productType.Picture" alt="Product Image" style="width: 50px; height: auto;"></td>
                    <td>
                        <div class="action-buttons">
                            <button type="button" class="btn btn-warning btn-sm edit-btn" data-toggle="modal" data-target="#editProductModal" onclick="setProductId('')">Edit</button>
                            <form action="/Product/DeleteProduct" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@productType.ID" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Add New Product Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_ProductForm", new iTCShop.Models.ProductType(), new ViewDataDictionary { { "formId", "addProductForm" }, { "formAction", "/Product/AddProductType" } })
            </div>
        </div>
    </div>
</div>
<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Edit Product Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_ProductForm", null, new ViewDataDictionary { { "formId", "editProductForm" }, { "formAction", "/Product/UpdateProductType" } })
            </div>
        </div>
    </div>
</div>