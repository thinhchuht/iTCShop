@model List<Order>

@{
    ViewBag.Title = "Order List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Tính tổng doanh thu
    decimal totalRevenue = Model.Sum(order => order.TotalPay);
    int totalOrders = Model.Count;
    decimal averageOrderValue = totalOrders > 0 ? totalRevenue / totalOrders : 0;
    var i = 0;
}

<div class="container mt-5">
    <div class="mt-5">
        <h3 class="text-center">Revenue Statistics</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Total Revenue</th>
                    <th>Total Orders</th>
                    <th>Average Order Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@totalRevenue.ToString("C0", new CultureInfo("vi-VN"))</td>
                    <td>@totalOrders</td>
                    <td>@averageOrderValue.ToString("C0", new CultureInfo("vi-VN"))</td>
                </tr>
            </tbody>
        </table>
    </div>
    <h2 class="text-center">Order List</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>No.</th>
                <th>OrderID</th>
                <th>Order Date</th>
                <th>Shipping Address</th>
                <th>Total Pay</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th></th>
            
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@order.ID</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@order.ShipAddress</td>
                    <td>@order.TotalPay.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>@order.PayMethod</td>
                    <td>
                        <button class="btn btn-info btn-sm" data-bs-toggle="collapse" data-bs-target="#details-@order.ID" aria-expanded="false" aria-controls="details-@order.ID">
                             Details
                        </button>
                    </td>
                </tr>
                <tr class="collapse" id="details-@order.ID">
                    <td colspan="7">
                        <div class="p-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product ID</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>@detail.ProductID</td>
                                            <td>@detail.Quantity</td>
                                            <td>@detail.Price.ToString("C")</td>
                                            <td>@(detail.Quantity * detail.Price).ToString("C")</td> 
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

   
</div>